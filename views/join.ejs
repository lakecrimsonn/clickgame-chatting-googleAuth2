<body>

    <%- include('nav.ejs') %>

        <div class="container mt-3 card shadow-lg p-3 mb-5 bg-white rounded">
            <h2 class="my-3 text-center"> join </h2>
            <p>
                <%=message%>
            </p>
            <form action="/addJoin" method="POST">
                <div class="form-group">
                    <label>name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>password</label>
                    <input type="password" class="form-control" name="pw">
                </div>
                <div class="form-group">
                    <label>password check</label>
                    <input type="password" class="form-control" name="pwchk">
                </div>
                <button type="submit" id="joinBtn" class="btn btn-danger mb-3">join</button>

            </form>
        </div>

        <script>

            $('#joinBtn').click(function (e) {
                if ($('input[name=pw]').val() !== $('input[name=pwchk]').val()) {
                    alert("비밀번호가 서로 일치 하지 않자나");
                    return false;
                };
            });

        </script>


